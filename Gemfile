source 'https://rubygems.org'

gem 'rails', '3.2.12'

# datebase gems
gem 'pg'

# Users
gem 'devise'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

# Stylesheets
gem 'bourbon'
gem 'neat'

# Javascript Gems
gem 'jquery-rails'

# View gems
gem 'simple_form'
gem 'slim'
gem "slim-rails"

# Testing and Dev gems
group :test, :development do
  gem "rspec-rails", "~> 2.0"
  gem 'capybara'
  gem 'poltergeist'
end
